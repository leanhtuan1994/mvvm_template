<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!-- Bottom sheet dialog theme with border radius -->
    <style name="sAppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/sAppModalStyle</item>
    </style>

    <style name="sAppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/b_background_radius_bottom_sheet</item>
    </style>


</resources>
